{
    "compilerOptions" : {
        "module": "commonjs",
        "target": "es5",
        "sourceMap": true,
        "importHelpers": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "allowUnusedLabels": false,
        "esModuleInterop":false,
        "allowSyntheticDefaultImports": true
    },
    // 允许从没有设置默认导出的模块中默认导入
    "allowSyntheticDefaultImports": true,
    // 启用装饰器
    "experimentalDecorators": true,
    // 指定特殊模块的路径
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.vue"
    ],
    "exclude": [
        "node_modules/**/*"
    ]
}